<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name of the farmer:"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name"
                android:background="#ffff"
                android:layout_marginTop="05dp"
                android:id="@+id/farmername"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sex:"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="05dp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sex"
                android:background="#ffff"
                android:layout_marginTop="05dp"
                android:id="@+id/sex"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Age:"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="05dp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Age"
                android:background="#ffff"
                android:layout_marginTop="05dp"
                android:id="@+id/age"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Village:"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="05dp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="village"
                android:background="#ffff"
                android:layout_marginTop="05dp"
                android:id="@+id/village"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Taluka:"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="05dp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Taluka"
                android:background="#ffff"
                android:layout_marginTop="05dp"
                android:id="@+id/taluka"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="District:"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="05dp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="District"
                android:background="#ffff"
                android:layout_marginTop="05dp"
                android:id="@+id/district"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="State:"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="05dp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="State"
                android:background="#ffff"
                android:layout_marginTop="05dp"
                android:id="@+id/state"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Land Ownership:"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="05dp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Land Ownership"
                android:background="#ffff"
                android:layout_marginTop="05dp"
                android:id="@+id/land_Ownership"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="05dp"
                android:textColor="@color/colorPrimary"
                android:text="Farm Land Address:"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Farm Land Address"
                android:background="#ffff"
                android:layout_marginTop="05dp"
                android:id="@+id/farm_land_Address"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Farm Land Area:"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="05dp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="farm land area"
                android:background="#ffff"
                android:layout_marginTop="05dp"
                android:id="@+id/farm_land_area"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mobile number:"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="05dp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mobile number"
                android:background="#ffff"
                android:layout_marginTop="05dp"
                android:id="@+id/mobile_number"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email:"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="05dp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"
                android:background="#ffff"
                android:layout_marginTop="05dp"
                android:id="@+id/email"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Password:"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="05dp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="password"
                android:background="#ffff"
                android:layout_marginTop="05dp"
                android:id="@+id/password"/>


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/btn_background"
                android:text="Edit Profile"
                android:id="@+id/editprofile"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textAllCaps="false"
                android:backgroundTint="@color/colorPrimary"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</FrameLayout>